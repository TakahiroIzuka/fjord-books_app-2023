<div id="<%= dom_id comment %>">
  <div class="comment-content">
    <div class="content-div">
      <p>
        <strong><%= Comment.human_attribute_name(:content) %>:</strong>
        <span><%= comment.content %></span>
      </p>
    </div>
    <div class="button-div">
      <% if comment.user_id == current_user.id %>
        <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase),
                      "/#{comment.commentable.model_name.plural}/#{comment.commentable.id}/comments/#{comment.id}",
                      method: :delete
        %>
      <% end %>
    </div>
  </div>

  <p>
    <strong><%= Comment.human_attribute_name(:user) %>:</strong>
    <% if comment&.user.present? %>
      <span><%= comment.user.display_name %></span>
    <% else %>
      <span><%= t('comment._comment.deleted_user') %></span>
    <% end %>
  </p>

  <p>
    <strong><%= Comment.human_attribute_name(:created_at) %>:</strong>
    <span><%= comment.posted_date %></span>
  </p>

</div>
