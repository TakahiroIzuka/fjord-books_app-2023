<div id="<%= dom_id user %>">
  <p>
    <strong><%= t User.human_attribute_name(:email) %>:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong><%= t User.human_attribute_name(:address) %>:</strong>
    <%= user.address %>
  </p>

  <p>
    <strong><%= t User.human_attribute_name(:post_code) %>:</strong>
    <%= user.post_code %>
  </p>

  <p>
    <strong><%= t User.human_attribute_name(:introduction) %>:</strong>
    <%= user.introduction %>
  </p>
</div>
